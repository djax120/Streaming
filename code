do {

   int typeint = cursor.getInt(typeIdx);
   int id = cursor.getInt(idIdx);
   final string  appId = cursor.getString(appIdIdx);
   final string displayName = cursor.getString(fromDisplayNameIdx);
   
   final String normalizedappId = MessagingUtils.normalizedPhoneNumber(appId);
   final String normalizedDisplayName = MessagingUtils.normalizedName(displayName);
   
   final string whereClause = db.TABLE_ORDERS_ID + " = ? ";
   final string whereArgs = new String[] {String.valueOf(id)};
   ContentValues cv = new ContentCalues(size 2);
   cv.put(db.TABLE_ORDERS_COLUMN_ID, normalizedappId);
   cv.put(db.TABLE_ORDERS_COLUMN_DISPLAY_NAME, normalizedDisplayName);
   
   int rowsAffected = db.update(db.TABLE_ORDERS, cv, whereClause, whereArgs)
   
 }
 
